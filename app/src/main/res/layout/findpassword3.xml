<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:background="@drawable/gradient_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/textFindpassword3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새 비밀번호"
            android:gravity="center"
            android:textColor="#6A8DD8"
            android:textStyle="bold"
            android:textSize="30dp"/>

        <TextView
            android:id="@+id/textResultFindpassword3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="#b63438"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/editTextNewPassword3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_shape"
            android:padding="15dp"
            android:hint="New Password"
            android:textSize="16dp"
            android:textColor="@color/blue"
            android:singleLine="true"
            android:inputType="textPassword"
            />
        <EditText
            android:id="@+id/editTextConfirmPassword3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/input_shape"
            android:padding="15dp"
            android:hint="Confirm Password"
            android:textSize="16dp"
            android:textColor="@color/blue"
            android:singleLine="true"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/btnFindpassword3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:padding="5px"
            android:text="저장"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />
    </LinearLayout>



</LinearLayout>