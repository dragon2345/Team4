<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:text="1"
            android:id="@+id/textviewquestionindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textviewtitlequestion"
            android:layout_marginLeft="5dp"
            android:text="이름"
            android:textSize="20sp"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textviewquestionindex"
            android:textColor="#030303"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/textviewcontentquestion"
            android:text="응엔비에트흥"
            android:textSize="15sp"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textviewquestionindex"
            android:layout_below="@id/textviewtitlequestion"
            android:textColor="#494343"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="5dp"
            android:src="@drawable/iconlove"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/imageviewlikenumberquestion"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>